@model Product
@{
    ViewData["Title"] = "Detail";
}

<section class="centeredPanel">
    <h2>Solar System Geek Gift Shop</h2>

    <table>
        <tbody>
            <tr>
                <td>
                    <img src="~/images/@Model.ImageName" width="300">
                </td>
                <td>
                    <h3>@Model.Name</h3>
                    <h4>@Model.Price.ToString("C")</h4>
                    <p>@Model.Description</p>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <form asp-action="AddToCart" asp-controller="Store" method="post">
                        <input type="hidden" asp-for="@Model.Id" />
                        <p>Quantity to buy:</p>
                        <label name="quantity"></label>
                        <input type="number" min="1" required name="quantity" />

                        <button id="change-color">Add to Cart</button>

                    </form>

                </td>

            </tr>


        </tbody>


    </table>






</section>


